    this.unityVersionOptions = JSON.parse(localStorage.getItem('vrc_unityVersionOptions')) || window.sampleData.unityVersionOptions || [];
    this.vrcSdkVersionOptions = JSON.parse(localStorage.getItem('vrc_vrcSdkVersionOptions')) || window.sampleData.vrcSdkVersionOptions || [];
    this.avatarPresets = JSON.parse(localStorage.getItem('vrc_avatarPresets')) || window.sampleData.avatarPresets || [];
    this.announcements = JSON.parse(localStorage.getItem('vrc_announcements')) || window.sampleData.announcements || [];

    // Save defaults back to LS if missing (Initial setup)
    const masterKeys = [
      ['toolOptions', this.toolOptions],
      ['problemOptions', this.problemOptions],
      ['unityVersionOptions', this.unityVersionOptions],
      ['vrcSdkVersionOptions', this.vrcSdkVersionOptions],
      ['avatarPresets', this.avatarPresets],
      ['announcements', this.announcements]
    ];

    masterKeys.forEach(([key, data]) => {
      if (!localStorage.getItem(`vrc_${key}`)) {
        localStorage.setItem(`vrc_${key}`, JSON.stringify(data));
