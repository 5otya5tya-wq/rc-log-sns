    this.ADMIN_USERS = ['admin']; // Only these usernames can access admin page

    // Ensure admin user exists
    if (!this.users['admin']) {
      this.users['admin'] = { password: btoa('admin123'), createdAt: new Date().toISOString() };
      localStorage.setItem('vrc_users', JSON.stringify(this.users));
    }
  }

  isAdmin() {
    return this.isLoggedIn && this.ADMIN_USERS.includes(this.currentUser);
  }

  saveData(key, data) {
    // Update local cache
    if (this[key]) this[key] = data;

